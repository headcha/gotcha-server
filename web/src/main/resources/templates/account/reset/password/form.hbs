{{#partial "content"}}
    <!-- main-container start -->
    <!-- ================ -->
    <div class="main-container dark-translucent-bg"
         style="background-image:url('/lib/bootstrap/html/template/images/background-img-6.jpg');">
        <div class="container">
            <div class="row">
                <!-- main start -->
                <!-- ================ -->
                <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
                    <div class="form-block center-block p-30 light-gray-bg border-clear">
                        <h2 class="title text-center">비밀번호 찾기.</h2>
                        <form class="form-horizontal" id="passwordResetRequestForm" role="form" action="/api/account/reset/password/request" method="post">
                            <div class="form-group has-feedback">
                                <div class="col-sm-offset-1 col-sm-4">
                                    <input class="form-control" id="name" name="name" placeholder="이름" required>
                                    <i class="fa fa-pencil form-control-feedback"></i>
                                </div>
                                <div class="col-sm-6">
                                    <input type="email" class="form-control" id="id" name="id" placeholder="이메일 ( 아이디 )" required>
                                    <i class="fa fa-envelope form-control-feedback"></i>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-sm-offset-1 col-sm-10">
                                    <button type="submit" class="btn btn-group btn-default btn-animated col-sm-12">찾기 <i class="fa fa-check"></i></button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- main end -->
            </div>
        </div>
    </div>
{{/partial}}
{{#partial "script"}}
    <script type="application/javascript" src="/display/js/util/AjaxUtil.js"></script>
    <script type="text/javascript">

        $('#passwordResetRequestForm').validator().on('submit', function (event) {

            if (event.isDefaultPrevented() == false) {

                FormAjaxHandler.send($(this) , fnSuccess , fnFail);

                function fnSuccess(result) {
                    bootbox.alert("입력된 메일 주소로 비밀번호 초기화 링크를 보냈습니다. 이메일을 확인해 주세요");
                }

                function fnFail(request , status , error) {
                    console.log(request , status , error);
                }
            }
            return false;
        });
    </script>
{{/partial}}
{{> layout/base}}